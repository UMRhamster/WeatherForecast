<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whut.umrhamster.weatherforecast.View.WeatherManagementActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ac_weathermanagement_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/citySearchtb">
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/ac_weathermanagement_back_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cityManagement"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/ac_weathermanagement_refresh_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/refresh"
            android:layout_gravity="end|center_vertical"/>
        <TextView
            android:id="@+id/ac_weathermanagement_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textSize="16sp"
            android:textColor="@color/textDarker"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="end|center_vertical"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ac_weathermanagement_rv"
        android:layout_below="@id/ac_weathermanagement_tb"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
